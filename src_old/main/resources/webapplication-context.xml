<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />


	<import resource="ibatis/fwbeans.xml" />

	<bean id="fwDataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName">
			<value>org.gjt.mm.mysql.Driver</value>
		</property>
		<property name="url">
			<value>jdbc:mysql://localhost:3306/aq2o</value>
		</property>
		<property name="username">
			<value>writer</value>
		</property>
		<property name="password">
			<value>writer</value>
		</property>
	</bean>

	<!-- Spring manage ServiceBean -->
	<bean id="mainServImpl" class="com.activequant.servicelayer.soap.MainService">
		<constructor-arg>
		<ref bean="ibatisDao"/>
		</constructor-arg>
	</bean>

	<!-- JAX-WS Service Endpoint -->
	<jaxws:endpoint id="mainService" implementor="#mainServImpl"
		address="/main" />

</beans>
